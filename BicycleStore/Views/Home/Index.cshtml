@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Welcome to BicycleStore</h1>
    <p class="lead">Unlock Your Ride: Gear Up for Adventure!</p>
    <a class="btn btn-primary btn-lg" asp-controller="Bike" asp-action="Search">Browse Bikes</a>
</div>

<div class="container">
    <h2 class="text-center mt-5">Our Collections</h2>
    <div id="bikeCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 pct" src="https://pub-f154438dceef491ba243fbee53912d51.r2.dev/wp-content/uploads/2023/11/14105740/rose_xlite-0337-MF.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Road Bikes</h5>
                    <p>Conquer the Roads, Chase the Horizons.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 pct" src="https://www.canyon.com/dw/image/v2/BCML_PRD/on/demandware.static/-/Sites-canyon-storefront/default/dwead92c71/category-landing/mountain/seo-mtb-light.jpg?sw=1280&sfrm=jpg&q=80" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>MTB Bikes</h5>
                    <p>Ride the Trails, Rule the Terrain.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 pct" src="https://momentummag.com/wp-content/uploads/2015/12/Priority-5458-davidniddrie-web.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>City Bikes</h5>
                    <p>Navigate the City, Embrace the Freedom.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#bikeCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#bikeCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <h2 class="text-center mt-5">Why Choose Us?</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <i class="fas fa-bicycle fa-3x mb-3"></i>
            <h3>Wide Selection</h3>
            <p>We offer a wide range of bikes for all types of riders.</p>
        </div>
        <div class="col-md-4">
            <i class="fas fa-tools fa-3x mb-3"></i>
            <h3>Expert Service</h3>
            <p>Our team of experts is here to help you find the perfect bike.</p>
        </div>
        <div class="col-md-4">
            <i class="fas fa-shipping-fast fa-3x mb-3"></i>
            <h3>Fast Shipping</h3>
            <p>Get your bike delivered to your doorstep quickly and safely.</p>
        </div>
    </div>
</div>
