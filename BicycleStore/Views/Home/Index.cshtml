@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron text-center" style="background-image: url('https://as2.ftcdn.net/v2/jpg/05/79/59/57/1000_F_579595753_lVJuq0yplRjz4BKFEG2OtK4vairqWyb4.jpg'); background-size: cover; color: white;">
    <h1 class="display-4">Welcome to BicycleStore</h1>
    <p class="lead">Your one-stop shop for all things bicycle-related!</p>
    <a class="btn btn-primary btn-lg" asp-controller="Bike" asp-action="Search">Browse Bikes</a>
</div>

<div class="container">
    <h2 class="text-center mt-5">Our Collections</h2>
    <div id="bikeCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://static.vecteezy.com/system/resources/previews/026/942/431/non_2x/girl-riding-bike-in-mountains-free-photo.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Mountain Bikes</h5>
                    <p>Conquer any terrain with our rugged mountain bikes.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://marketplacer.imgix.net/0D/jJYRyCo-oLLnvt7_yUT4YXDhA.jpg?auto=format&fm=pjpg&fit=max&q=90&itemprop=image&alt=Early%20Release%202017%20Giant%20Road%20Range&w=1600&h=1000&s=3758b035b8b415e1648bf38126e04880" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Road Bikes</h5>
                    <p>Speed through the streets with our high-performance road bikes.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://www.canyon.com/dw/image/v2/BCML_PRD/on/demandware.static/-/Library-Sites-canyon-shared/default/dw87dbf912/images/plp/canyon-hybrid-bike-world-hero-01.jpg?sw=1920" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Hybrid Bikes</h5>
                    <p>The perfect blend of performance and comfort.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#bikeCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#bikeCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <h2 class="text-center mt-5">Why Choose Us?</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <i class="fas fa-bicycle fa-3x mb-3"></i>
            <h3>Wide Selection</h3>
            <p>We offer a wide range of bikes for all types of riders.</p>
        </div>
        <div class="col-md-4">
            <i class="fas fa-tools fa-3x mb-3"></i>
            <h3>Expert Service</h3>
            <p>Our team of experts is here to help you find the perfect bike.</p>
        </div>
        <div class="col-md-4">
            <i class="fas fa-shipping-fast fa-3x mb-3"></i>
            <h3>Fast Shipping</h3>
            <p>Get your bike delivered to your doorstep quickly and safely.</p>
        </div>
    </div>
</div>
