@model IEnumerable<BicycleStore.Models.Bike>

@{
    ViewBag.Title = "Search Bikes";
}

<h2>Search Bikes</h2>

<input type="text" id="searchString" placeholder="Search by Model" onkeyup="searchBikes()" />

<div id="bikeList">
    @await Html.PartialAsync("_BikeListPartial", Model)
</div>

@section Scripts {
    <script>
        function searchBikes() {
            var searchString = document.getElementById('searchString').value;
            var xhr = new XMLHttpRequest();
            xhr.open('GET', '@Url.Action("Search", "Bike")?searchString=' + searchString, true);
            xhr.setRequestHeader('X-Requested-With', 'XMLHttpRequest');
            xhr.onload = function () {
                if (xhr.status >= 200 && xhr.status < 400) {
                    document.getElementById('bikeList').innerHTML = xhr.responseText;
                }
            };
            xhr.send();
        }
    </script>
}
