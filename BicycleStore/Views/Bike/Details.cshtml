@model BicycleStore.Models.Bike

@{
    ViewData["Title"] = "Bike Details";
}

<h1>@Model.Model</h1>

<div>
    <h4>Bike</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Is Reserved</dt>
        <dd class="col-sm-10">@Model.IsReserved</dd>
        <dt class="col-sm-2">Supplier</dt>
        <dd class="col-sm-10">@Model.Supplier?.Name</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Back to Bike List</a>
    <a asp-action="Index" asp-controller="Supplier" class="btn btn-primary">Back to Suppliers List</a>
</div>
