@model BicycleStore.Models.Supplier

@{
    ViewData["Title"] = "Supplier Details";
    var bikes = ViewBag.Bikes as List<BicycleStore.Models.Bike>;
}

<h1>Supplier Details</h1>

<div>
    <h4>Supplier</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

<div>
    <h4>Bikes</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Model</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bike in bikes)
            {
                <tr>
                    <td>@bike.Model</td>
                    <td>@bike.Price</td>
                    <td>
                        <a asp-action="EditBike" asp-route-id="@bike.Id" class="btn btn-primary">Edit</a> |
                        <a asp-action="DeleteBike" asp-route-id="@bike.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="EditSupplier" asp-route-id="@Model.Id" class="btn btn-primary">Edit Supplier</a> |
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
