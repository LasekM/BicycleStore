@model IEnumerable<BicycleStore.Models.Bike>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Available Bikes</h1>

<table class="table">
    <thead>
        <tr>
            <th>Model</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Supplier</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bike in Model)
        {
            <tr>
                <td>@bike.Model</td>
                <td>@bike.Brand</td>
                <td>@bike.Price.ToString("C")</td>
                <td>@bike.Supplier?.Name</td>
            </tr>
        }
    </tbody>
</table>
