@model BicycleStore.Models.Supplier

@{
    ViewData["Title"] = "Supplier Details";
}

<h1>@Model.Name</h1>

<h2>Bikes</h2>
@if (Model.Bikes != null && Model.Bikes.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Model</th>
                <th>Price</th>
                <th>Is Reserved</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bike in Model.Bikes)
            {
                <tr>
                    <td>@bike.Model</td>
                    <td>@bike.Price</td>
                    <td>@bike.IsReserved</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No bikes available for this supplier.</p>
}

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Create" asp-controller="Bike" asp-route-supplierId="@Model.Id" class="btn btn-primary">Create New Bike</a>
</div>
