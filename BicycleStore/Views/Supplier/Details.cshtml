@model BicycleStore.Models.Supplier

@{
    ViewData["Title"] = "Supplier Details";
}

<h1>@Model.Name</h1>

<h2>Bikes from this Supplier</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bikes.First().Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bikes.First().Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bikes.First().GroupSet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bikes.First().Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bike in Model.Bikes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => bike.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => bike.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => bike.GroupSet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => bike.Price)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Action buttons">
                        <a asp-action="Edit" asp-controller="Bike" asp-route-id="@bike.Id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Details" asp-controller="Bike" asp-route-id="@bike.Id" class="btn btn-secondary btn-sm">Details</a>
                        <a asp-action="Delete" asp-controller="Bike" asp-route-id="@bike.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Create" asp-controller="Bike" asp-route-supplierId="@Model.Id" class="btn btn-primary">Create New Bike</a>
</div>
